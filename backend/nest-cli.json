{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "tsConfigPath": "./tsconfig.build.json",
    "deleteOutDir": true,
    "assets": [
      {
        "include": "**/*.html",
        "watchAssets": true
      },
      {
        "include": "**/*.css",
        "watchAssets": true
      },
      {
        "include": "**/*.js",
        "watchAssets": true
      }
    ]
  }
}
