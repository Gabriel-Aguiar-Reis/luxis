{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "Gabriel Aguiar",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "start:dev": "cross-env NODE_ENV=development nest start --watch",
    "start:debug": "cross-env NODE_ENV=development nest start --debug --watch",
    "start:prod": "cross-env NODE_ENV=production node dist/src/main",
    "test": "cross-env NODE_ENV=test jest",
    "test:unit": "cross-env NODE_ENV=test jest --testPathPattern=test/unit",
    "test:integration": "cross-env NODE_ENV=test jest --testPathPattern=test/integration --maxWorkers=1",
    "test:watch": "cross-env NODE_ENV=test jest --watch --maxWorkers=1",
    "test:cov": "cross-env NODE_ENV=test jest --coverage",
    "test:debug": "cross-env NODE_ENV=test node --inspect-brk -r tsconfig-paths/register ./node_modules/.bin/jest -r ts-node/register node_modules",
    "test:e2e": "cross-env NODE_ENV=test jest --testPathPattern=test/e2e --maxWorkers=1",
    "typeorm": "cross-env NODE_ENV=development ts-node -r tsconfig-paths/register src/shared/infra/database/typeorm-datasource.ts",
    "migration:generate": "cross-env NODE_ENV=development ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:generate -d src/shared/infra/database/typeorm-datasource.ts",
    "migration:run": "cross-env NODE_ENV=development ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run -d src/shared/infra/database/typeorm-datasource.ts",
    "migration:revert": "cross-env NODE_ENV=development ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:revert -d src/shared/infra/database/typeorm-datasource.ts",
    "prod:migration:generate": "cross-env NODE_ENV=production ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:generate -d src/shared/infra/database/typeorm-datasource.ts",
    "prod:migration:run": "cross-env NODE_ENV=production ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run -d src/shared/infra/database/typeorm-datasource.ts",
    "prod:migration:revert": "cross-env NODE_ENV=production ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:revert -d src/shared/infra/database/typeorm-datasource.ts",
    "seed": "cross-env NODE_ENV=test ts-node src/shared/infra/database/seed.ts",
    "reset:test": "rm -f test.sqlite && yarn migration:run && yarn test:seed",
    "seed:superuser": "cross-env NODE_ENV=development ts-node -r tsconfig-paths/register src/shared/infra/database/seeds/run-seed.ts"
  },
  "dependencies": {
    "@casl/ability": "^6.7.3",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.0",
    "@nestjs/swagger": "^11.1.6",
    "@nestjs/typeorm": "^11.0.0",
    "@types/passport": "^1.0.17",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cloudinary": "^2.6.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "nestjs-pino": "^4.4.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.14.1",
    "pino-http": "^10.4.0",
    "pino-pretty": "^13.0.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.22",
    "typeorm-naming-strategies": "^4.1.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  }
}
